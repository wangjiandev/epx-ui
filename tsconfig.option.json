{
  "compilerOptions": {
    // 这几项配置与Typescript的Project References, tsc的--build模式有关
    "composite": true,
    "incremental": true,
    // 这几项配置与生成js文件\d.ts文件,sourcemap文件有关
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    // 这几项配置与Commonjs和ESModule之间的互操作有关
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    //
    "resolveJsonModule": true,
    "strict": true
  }
}
