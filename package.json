  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "cz": "cz",
    "__eslint__comment": "查阅eslint文档: https://eslint.org/docs/latest/use/command-line-interface",
    "lint": "eslint ./ --ext .ts,.js,.json --max-warnings=0",
